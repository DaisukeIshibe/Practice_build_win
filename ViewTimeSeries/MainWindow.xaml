<Window x:Class="ViewTimeSeries.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewTimeSeries"
        mc:Ignorable="d"
        Title="Point &amp; Figure Chart Viewer" Height="600" Width="1000">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open CSV" Click="OpenCsvMenuItem_Click"/>
                <MenuItem Header="Generate Test Data" Click="GenerateTestDataMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="ChartCanvas" Width="2000" Height="2000" Background="White"/>
        </ScrollViewer>
    </DockPanel>
</Window>
